# ~/.config/nvim/.env
# Database connection strings for vim-dadbod
# Replace <user>, <password>, <host>, <port>, <dbname>, <sid>, etc. with actual values
# Ensure this file is not tracked by version control (add to .gitignore)

# MySQL connection
DB_DEV_MYSQL=mysql://<user>:<password>@<host>:<port>/<dbname>
# Example: DB_DEV_MYSQL=mysql://dev_user:dev_pass@localhost:3306/dev_db

# PostgreSQL connection
DB_DEV_POSTGRES=postgresql://<user>:<password>@<host>:<port>/<dbname>
# Example: DB_DEV_POSTGRES=postgresql://dev_user:dev_pass@localhost:5432/dev_db

# SQLite connection
DB_DEV_SQLITE=sqlite:/path/to/database.db
# Example: DB_DEV_SQLITE=sqlite:/home/user/databases/dev.db

# Oracle connection
DB_DEV_ORACLE=oracle://<user>:<password>@<host>:<port>/<sid>
# Example: DB_DEV_ORACLE=oracle://dev_user:dev_pass@localhost:1521/orcl

# PL/SQL (same as Oracle, included for completeness)
DB_DEV_PLSQL=oracle://<user>:<password>@<host>:<port>/<sid>
# Example: DB_DEV_PLSQL=oracle://dev_user:dev_pass@localhost:1521/orcl

# Additional examples for different environments
DB_PROD_MYSQL=mysql://<prod_user>:<prod_password>@<remote_host>:<port>/<prod_db>
DB_PROD_POSTGRES=postgresql://<prod_user>:<prod_password>@<remote_host>:<port>/<prod_db>
